<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/appmain_d_110"
    android:paddingRight="@dimen/appmain_d_16"
    android:paddingLeft="@dimen/appmain_d_16"
    android:paddingTop="@dimen/appmain_d_10"
    android:paddingBottom="@dimen/appmain_d_10"
    >



    <ImageView
        android:id="@+id/iv_post"
        android:layout_width="@dimen/appmain_d_120"
        android:layout_height="@dimen/appmain_d_90"
        tools:background="@color/c_4239ae"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_post"
        android:textSize="@dimen/appmain_s_15"
        android:textColor="@color/appmain_c_252525"
        tools:text="我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题"/>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_post"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/appmain_c_999999"
        android:textSize="@dimen/appmain_s_13"
        tools:text="我是姓名"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_author"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/appmain_c_999999"
        android:textSize="@dimen/appmain_s_13"
        tools:text="时间"/>

    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_collect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</android.support.constraint.ConstraintLayout>